<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pharmacie.controller.SalesController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <top>
        <VBox spacing="10">
            <Label text="Nouvelle Vente">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Client:" />
                <ComboBox fx:id="clientComboBox" prefWidth="200" promptText="Sélectionner Client" />
                <Label text="Produit:" />
                <ComboBox fx:id="productComboBox" prefWidth="200" promptText="Sélectionner Produit" />

                <Label text="Qté:" />
                <TextField fx:id="quantityField" prefWidth="60" text="1" />
                <Button onAction="#handleAddToCart" text="Ajouter au Panier" />
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="cartTable">
            <columns>
                <TableColumn fx:id="productNameColumn" prefWidth="200" text="Produit" />
                <TableColumn fx:id="priceColumn" prefWidth="100" text="Prix Unitaire" />
                <TableColumn fx:id="quantityColumn" prefWidth="100" text="Quantité" />
                <TableColumn fx:id="totalColumn" prefWidth="100" text="Total Ligne" />
            </columns>
         <BorderPane.margin>
            <Insets top="10.0" bottom="10.0"/>
         </BorderPane.margin>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="20">
            <Label text="Total:">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Label>
            <Label fx:id="totalLabel" text="0.000 DT">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Label>
            <Button onAction="#handleClear" text="Annuler" textFill="RED" />
            <Button onAction="#handleCheckout" style="-fx-background-color: #90ee90;" text="Valider Vente">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Button>
        </HBox>
    </bottom>
    
</BorderPane>
